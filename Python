import mysql.connector

conexion = mysql.connector.connect(
  host="localhost",
  user="root",
  password="",
  database="libreria"
)

# Obtener los valores ingresados por el usuario
nombre_usuario = input("Ingrese su nombre de usuario: ")
contrasena = input("Ingrese su contraseña: ")

# Crear un cursor para ejecutar consultas SQL
cursor = conexion.cursor()

# Ejecutar la consulta para verificar los datos de usuario y contraseña
consulta = "SELECT * FROM usuario WHERE nombre = %s AND contraseña = %s"
valores = (nombre_usuario, contrasena)
cursor.execute(consulta, valores)

# Obtener los resultados de la consulta
resultado = cursor.fetchone()

# Verificar si se encontró un usuario coincidente
if resultado:
  print("Inicio de sesión exitoso")
else:
  print("Nombre de usuario o contraseña incorrectos")

# Cerrar la conexión y el cursor
cursor.close()
conexion.close()
